<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="site.metacoding.firstapp.domain.subscribe.SubscribeDao">

    <select id="findAll"
        resultType="site.metacoding.firstapp.domain.subscribe.Subscribe"> SELECT * FROM subscribe </select>

    <insert id="insert" useGeneratedKeys="true" keyProperty="subscribeId"> INSERT INTO
        subscribe(post_id, user_id) VALUES(#{postId}, #{userId}) </insert>

    <select id="findById"
        resultType="site.metacoding.firstapp.domain.subscribe.Subscribe">
         SELECT * FROM subscribe WHERE subscribe_id=#{subscribeId} </select>


    <delete id="deleteById">DELETE FROM subscribe WHERE subscribe_id=#{subscribeId}</delete>
</mapper>



 